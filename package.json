{
	"name": "teamfight-simulator",
	"version": "0.1.0",
	"type": "module",
	"license": "ISC",
	"engines": {
		"node": ">=16",
		"pnpm": ">=6"
	},
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite build && vite preview",
		"lint": "eslint './**/*.{ts,vue}' && vue-tsc --noEmit",
		"test": "vitest",
		"coverage": "vitest run --coverage && open coverage/index.html"
	},
	"dependencies": {
		"@tacticians-academy/academy-library": "^0.20.0",
		"@tailwindcss/forms": "^0.5.0",
		"@vitejs/plugin-vue": "^2.3.1",
		"tailwindcss": "^3.0.24",
		"vite": "^2.9.3",
		"vite-plugin-checker": "^0.4.5",
		"vite-tsconfig-paths": "^3.4.1",
		"vue": "^3.2.32"
	},
	"devDependencies": {
		"@ky-is/eslint-config": "^2.5.1",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"autoprefixer": "^10.4.4",
		"c8": "^7.11.0",
		"eslint": "^8.13.0",
		"eslint-plugin-vue": "^8.6.0",
		"happy-dom": "^2.55.0",
		"postcss": "^8.4.12",
		"typescript": "^4.6.3",
		"vitest": "^0.9.3",
		"vue-eslint-parser": "^8.3.0",
		"vue-tsc": "^0.34.6"
	},
	"eslintConfig": {
		"extends": [
			"@ky-is/eslint-config/vue-typescript"
		],
		"rules": {
			"vue/component-tags-order": [
				"error",
				{
					"order": [
						[
							"script",
							"template"
						],
						"style"
					]
				}
			],
			"vue/no-v-html": "off"
		}
	},
	"postcss": {
		"plugins": {
			"tailwindcss": {
				"config": "tailwind.config.ts"
			}
		}
	}
}
