{
	"name": "teamfight-simulator",
	"version": "0.1.0",
	"license": "ISC",
	"type": "module",
	"engines": {
		"node": ">=16",
		"pnpm": ">=6"
	},
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc --noEmit && vite build",
		"preview": "vite preview"
	},
	"dependencies": {
		"@tacticians-academy/academy-library": "^0.15.1",
		"@tailwindcss/forms": "^0.5.0",
		"tailwindcss": "^3.0.23",
		"vue": "^3.2.31"
	},
	"devDependencies": {
		"@babel/types": "^7.17.0",
		"@ky-is/eslint-config": "^2.3.6",
		"@types/node": "^16.11.26",
		"@vitejs/plugin-vue": "^2.2.4",
		"@vue/eslint-config-typescript": "^10.0.0",
		"autoprefixer": "^10.4.4",
		"eslint": "^8.12.0",
		"eslint-plugin-vue": "^8.5.0",
		"node-fetch": "^3.2.3",
		"postcss": "^8.4.12",
		"typescript": "^4.6.3",
		"vite": "^2.8.6",
		"vite-tsconfig-paths": "^3.4.1",
		"vue-tsc": "^0.33.9"
	},
	"eslintConfig": {
		"extends": "@ky-is/eslint-config/vue-typescript",
		"parserOptions": {
			"sourceType": "module",
			"project": [
				"tsconfig.eslint.json"
			]
		},
		"rules": {
			"@typescript-eslint/strict-boolean-expressions": "error",
			"vue/component-tags-order": [
				"error",
				{
					"order": [
						[
							"script",
							"template"
						],
						"style"
					]
				}
			],
			"vue/html-indent": [
				"error",
				"tab",
				{
					"baseIndent": 0
				}
			],
			"vue/no-v-html": "off"
		}
	},
	"postcss": {
		"plugins": {
			"tailwindcss": {
				"config": "tailwind.config.ts"
			}
		}
	}
}
