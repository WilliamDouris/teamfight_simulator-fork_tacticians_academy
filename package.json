{
	"name": "teamfight-simulator",
	"version": "0.1.0",
	"license": "ISC",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc --noEmit && vite build",
		"preview": "vite preview",
		"data": "node --loader ts-node/esm build/loadData.ts"
	},
	"dependencies": {
		"@tailwindcss/forms": "^0.4.0",
		"tailwindcss": "^3.0.16",
		"vue": "^3.2.29"
	},
	"devDependencies": {
		"@ky-is/eslint-config": "^2.3.6",
		"@types/node": "^17.0.12",
		"@vitejs/plugin-vue": "^2.1.0",
		"@vue/eslint-config-typescript": "^10.0.0",
		"eslint": "^8.7.0",
		"eslint-plugin-vue": "^8.3.0",
		"node-fetch": "^3.2.0",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.5",
		"vite": "^2.7.13",
		"vue-tsc": "^0.31.1"
	},
	"eslintConfig": {
		"extends": "@ky-is/eslint-config/vue-typescript",
		"parserOptions": {
			"sourceType": "module",
			"project": [
				"tsconfig.eslint.json"
			]
		},
		"rules": {
			"@typescript-eslint/strict-boolean-expressions": "error",
			"vue/component-tags-order": [
				"error",
				{
					"order": [
						[
							"script",
							"template"
						],
						"style"
					]
				}
			],
			"vue/html-indent": [
				"error",
				"tab",
				{
					"baseIndent": 0
				}
			],
			"vue/no-v-html": "off"
		}
	},
	"postcss": {
		"plugins": {
			"tailwindcss": {
				"config": "tailwind.config.ts"
			}
		}
	}
}
